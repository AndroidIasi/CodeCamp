<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">
        <ImageView
            android:id="@+id/android_iasi_logo"
            android:layout_width="@dimen/android_iasi_width"
            android:layout_height="@dimen/android_iasi_height"
            android:src="@drawable/androi_iasi_logo"/>
        <TextView
            style="@style/Text.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:gravity="center"
            android:text="@string/androidiasi"/>
        <TextView
            style="@style/Text.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/description"/>
        <TextView
            style="@style/Text.Body"
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:gravity="center"
            android:text="@string/version"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/github_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_github_logo"
        android:drawablePadding="@dimen/button_drawable_padding"
        android:text="@string/app_is_open_source"/>
</RelativeLayout>